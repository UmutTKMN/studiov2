{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "**/node_modules", "**/dist"]
}
